<span class="border-0">
<div class= "container">
<div class= "row">
<div class="col-4">
<%if @account.image.attached?%>
<%=image_tag url_for(@account.image), width: "200px", class: "rounded-circle", class: "profile-pic"%>
<%end%>


</div>
<div class="col-8 text-left">
    <h1 style="float: left; width: 50%;"><%=@account.username.capitalize%></h1>
    <h1 style="float: right; width: 50%; text-align: right;"><div class="btn btn-primary"> Follow or if followed <i class="fas fa-user-check"></i></div></h1>
  

    
   
        <div class="profile-stats">0 posts</div>
